root = true


[*]
insert_final_newline = true
end_of_line = lf


[*.sh]
indent_style = space
indent_size = 4


[*.py]
charset = utf-8
indent_style = space
indent_size = 4


[*.{cpp. hpp. cc, h, c}]
charset = utf-8
indent_style = space
indent_size = 2


[*.json]
indent_style = space
indent_size = 4


[Makefile]
indent_style = tab
indent_size = 4


[CMakeLists.txt]
indent_style = tab
indent_size = 4
