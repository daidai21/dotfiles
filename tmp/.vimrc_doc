" VIM Configuration
" Name:  DaiDai




" ====================================================================================================
" ====================================================================================================
" 基础配置
" ====================================================================================================
" ====================================================================================================


" 设置编码
set encoding=utf-8  " 用于缓存的文本、寄存器、Vim 脚本文件等
set fileencodings=utf-8  " Vim写入文件时采用的编码类型
set termencoding=utf-8  " 选项表示输出到终端时采用的编码类型
" 显示行号
set number
" 突出显示当前行
set cursorline
" 突出显示当前列
set cursorcolumn
" 启用鼠标
set mouse=a
set selection=exclusive
set selectmode=mouse,key
" 显示括号匹配
set showmatch
" 设置缩进
set tabstop=4  " 设置Tab长度为4空格
set shiftwidth=4  " 设置自动缩进长度为4空格
set autoindent  " 继承前一行的缩进方式，适用于多行注释
" 设置粘贴模式
set paste  " 防止通过鼠标右键粘贴时会在行首多出许多缩进和空格
" 显示空格和tab键
set listchars=tab:>-,trail:-
显示状态栏和光标当前位置
set laststatus=2  " 总是显示状态栏
set ruler  " 显示光标当前位置 显示光标的行数列数
" 让vimrc配置变更立即生效
autocmd BufWritePost $MYVIMRC source $MYVIMRC
" 配色方案
colorscheme = molokai  " Molokai颜色


